@model PaginationViewModel

<nav>
    <ul class="pagination justify-content-center">

        <li class="page-item @if (Model.FirstPage == Model.PageNumber) { <text>disabled</text> }">
            <a class="page-link" asp-for="All" asp-route-id="@Model.FirstPage">&laquo;&laquo;</a>
        </li>

        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPageNumber">&laquo;</a>
        </li>


        <li class="page-item">
            <a class="page-link" asp-for="All" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
        </li>

        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-for="All" asp-route-id="@Model.NextPageNumber">&raquo;</a>
        </li>

        <li class="page-item @if (Model.PageNumber == Model.PagesCount) { <text>disabled</text> }">
            <a class="page-link" asp-for="All" asp-route-id="@Model.PagesCount">&raquo;&raquo;</a>
        </li>
    </ul>
</nav>