@using AutoHub.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div>
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                  
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Cars
                                    </button>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AddCar">Add Car</a>

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="All">All Cars</a>

                                    </div>
                                </div>
                            </li>

                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Categoryes
                                    </button>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Купе">Coupes</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Стреч лимузина">Limosines</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Седан">Sedans</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Пикап">PickUp Trucks</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Миниван">MinVans</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Комби">Wagons</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Кабрио">Convertible</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Джип">Jeeps</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="AllByCoupeType" asp-route-data="Ван">Vans</a>
                                    </div>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="AllReviews">Reviews</a>
                            </li>

                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Index">Search</a>
                            </li>

                            @if (!this.User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Contacts" asp-action="Index">Contact Us</a>
                                </li>
                            }

                            <li>

                                @if (this.User.IsInRole("Administrator"))
                                {
                                    <a class="nav-link text-dark" asp-area="Administration" asp-controller="Reviews" asp-action="Index"> Reviews Administration</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <partial name="_CookieConsentPartial" />
            @*<div class="col-lg-8 g-mb-30 g-mb-0--lg">
                @this.RenderBody()
            </div>*@
            @this.RenderBody()
        </div>
    </div>

    <footer class="ranna-bg">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
